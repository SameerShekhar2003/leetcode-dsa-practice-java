//Algorithm: Greedy (track min price + max profit in single pass).

//Time Complexity: O(n)

//Space Complexity: O(1)

class Solution {
    public int maxProfit(int[] prices) {
        int buy = prices[0];
        int profit=0;
        for(int i=0;i<prices.length;i++){
            int currprofit = prices[i]-buy;
            if(prices[i]<buy){
                buy=prices[i];
            } else {
                profit = Math.max(currprofit, profit);
            }
        }
        return profit;
    }
}
